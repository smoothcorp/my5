- content_for :extra_stylesheets do
    = stylesheet_link_tag "my5/base"
  
!!!
%html
    %head
        = render 'shared/head', :page_title => browser_title(yield :title), :include_common => true
    %body{ :id => params[:controller].parameterize.split('-').last, :class => "#{params[:action].parameterize.split('-').last}" }
        /#{'symptomatic_video' if (@video && @video.symptomatic)}
        %div#header_background
            .bars_whole
            %div#dark_gradient
            %div#grey_gradient
        %div#header= render 'my5/shared/header'
        %div{:id => params[:action].parameterize, :class => "content"}
            = render 'shared/flashes'
            = yield
        %div#footer= render 'shared/footer'

        = render 'shared/seo'
