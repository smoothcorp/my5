<% content_for :body_content_title do %>
  <%= @subscription.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Customer</h1>
    <p>
      <%=raw @subscription.customer_id %>
    </p>
  </section>
  <section>
    <h1>Expiry Date</h1>
    <p>
      <%=raw @subscription.expiry_date %>
    </p>
  </section>
  <section>
    <h1>Plan</h1>
    <p>
      <%=raw @subscription.plan %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="subscriptions">
      <% @subscriptions.each do |subscription| %>
        <li>
          <%= link_to subscription.title, subscription_path(subscription) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
