<ul>
  <% if Admin::MyEqsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_my_eqs_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_my_eq_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::MyEqsController.sortable? and MyEq.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "My Eqs"),
                 admin_my_eqs_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "My Eqs"),
                 admin_my_eqs_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>