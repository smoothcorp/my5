<% content_for :body_content_title do %>
  <%= @customer.first_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @customer.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @customer.last_name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @customer.email %>
    </p>
  </section>
  <section>
    <h1>Contact Phone</h1>
    <p>
      <%=raw @customer.contact_phone %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>

    </p>
  </section>
  <section>
    <h1>Role</h1>
    <p>
      <%=raw @customer.role %>
    </p>
  </section>
  <section>
    <h1>Corporation</h1>
    <p>
      <%=raw @customer.corporation %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="customers">
      <% @customers.each do |customer| %>
        <li>
          <%= link_to customer.first_name, customer_path(customer) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
