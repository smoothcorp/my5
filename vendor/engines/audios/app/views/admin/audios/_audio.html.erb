<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(audio) -%>">
  <span class='title'>
    <%= audio.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='audio_program'>
    <%= audio.audio_program.title unless audio.audio_program.blank? %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), audio_path(audio),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_audio_path(audio),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_audio_path(audio),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => audio.title),
        :method => :delete %>
  </span>
</li>
