.padded
    %div#condition.video_header
        - body_part = Symptomatic.body_parts[@video.symptomatic.body_part]
        %h1 #{@video.symptomatic.body_part_name} > #{@video.symptomatic.condition} > #{@video.title}
        = link_to image_tag("grey_arrow_left_small.png") + "Go back to view all exercises for #{@video.symptomatic.condition}", my5_condition_path(@video.symptomatic.id, @video.symptomatic.to_param)
    %ul.video
        - unless @video.embed_code.blank?
            = @video.embed_code.html_safe
        = @video.description.html_safe

%script{:language => "javascript", :type => "text/javascript"}
    $(document).ready(function() {
    $('.video').find('object').attr("width","640");
    $('.video').find('embed').attr("width","640");
    $('.video').find('object').attr("height","480");    
    $('.video').find('embed').attr("height","480");
    });
        
