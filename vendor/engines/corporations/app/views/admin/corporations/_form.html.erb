<%= form_for [:admin, @corporation] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @corporation,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>
  
  <!--
  <div class='field'>
    <%= f.label :logo -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :logo_id,
          :image => @corporation.logo,
          :toggle_image_display => false
        } %>
  </div>
  -->
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.corporations.corporation'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @corporation.name)
              } %>
<% end -%>
