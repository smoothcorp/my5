<% content_for :body_content_title do %>
  <%= @program.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @program.price %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="programs">
      <% @programs.each do |program| %>
        <li>
          <%= link_to program.title, program_path(program) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
